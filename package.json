{
  "name": "francis",
  "version": "2.0.0-alpha5",
  "description": "Bacon++",
  "author": "Matti Lankinen <m.lankinen@iki.fi>",
  "license": "MIT",
  "keywords": [
    "reactive programming",
    "frp",
    "typescript"
  ],
  "main": "dist/francis.js",
  "jsnext:main": "lib/index.js",
  "scripts": {
    "prebuild": "rm -rf lib dist && mkdir lib dist",
    "postbuild": "echo 'gzipped bundle sizes'; for js in dist/*.js; do echo \"$js : $(gzip-size $js)\"; done",
    "package:dev": "rollup -c rollup.config.js && rollup -c rollup.bacon.config.js",
    "package:min": "rollup -c rollup.min.config.js && rollup -c rollup.bacon.min.config.js",
    "compile:ts": "tsc -p ./tsconfig.build.json",
    "build": "npm run compile:ts && npm run package:dev && npm run package:min",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "prettier --write 'src/**/*.ts'",
    "linterfixes": "tslint --fix --project .",
    "format": "npm run prettify && npm run linterfixes",
    "ts-node": "ts-node -O '{\"module\": \"commonjs\"}'",
    "ncu": "ncu -u -a && ncu -u -a --packageFile perf/package.json",
    "test": "jest",
    "test:ci": "jest --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@types/node": "^10.5.2",
    "@types/ramda": "^0.25.34",
    "baconjs": "^2.0.7",
    "gzip-size-cli": "^3.0.0",
    "jest": "^22.0.0",
    "npm-check-updates": "^2.14.2",
    "prettier": "^1.13.7",
    "ramda": "^0.25.0",
    "rollup": "^0.62.0",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "2.9.x",
    "typescript-snapshots-plugin": "^1.2.0"
  },
  "jest": {
    "globals": {
      "__FRANCIS_DEV__": 1
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "/test/[^_].*\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
